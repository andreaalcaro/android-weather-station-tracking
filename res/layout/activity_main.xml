<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivityLinearLayoutTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/MainActivityTextViewFavoriteStation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/favoriteStationText"
        android:textSize="24sp"       
        android:textStyle="bold" />

    <ListView
        android:id="@+id/MainActivityListViewFavoriteStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:id="@+id/MainActivityTextViewStations"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/pickAStationText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/MainActivityListViewStations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>