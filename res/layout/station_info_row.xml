<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/StationListLinearLayoutTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#AAAAAA"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/StationInfoImageViewStationLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/StationInfoLinearLayoutStation"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/StationInfoTextViewStationID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/StationInfoTextViewStationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>